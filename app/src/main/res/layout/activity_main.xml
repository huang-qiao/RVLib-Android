<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <org.qiao.rvlib.visualization.VisualizationView
        android:id="@+id/visualization"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move"
        android:id="@+id/button_move"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onMoveBtnClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LaserScan"
        android:id="@+id/button_laserscan"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/button_move"
        android:onClick="onLaserBtnClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReadMap"
        android:id="@+id/button_readmap"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/button_laserscan"
        android:onClick="onReadMapFileBtnClick"/>

</RelativeLayout>
